<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.kulala.staticsview.titlehead.ClipTitleHead
        android:id="@+id/title_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:leftres="@drawable/titlehead_back"
        androidme:text="使用摇一摇功能手机该如何设置" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_head"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.kulala.staticsview.image.smart.SmartImageView
                android:id="@+id/img_shake_set01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_shake_set01" />

            <com.kulala.staticsview.image.smart.SmartImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_shake_set02" />

            <RelativeLayout
                android:id="@+id/layout_lock_app"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_lock_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="更多锁定APP方式"
                    android:textColor="#0058c5"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/img_right_two"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="8.5dp"
                    android:layout_toRightOf="@+id/txt_lock_app"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_shake_right" />
            </RelativeLayout>

            <com.kulala.staticsview.image.smart.SmartImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_shake_set03" />

            <com.kulala.staticsview.image.smart.SmartImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_shake_set04" />

            <RelativeLayout
                android:id="@+id/layout_power"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="更多电池/电量管理设置方式"
                    android:textColor="#0058c5"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/img_right_one"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="8.5dp"
                    android:layout_toRightOf="@+id/txt_power"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_shake_right" />
            </RelativeLayout>

            <com.kulala.staticsview.image.smart.SmartImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_shake_set05" />

            <com.kulala.staticsview.image.smart.SmartImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_shake_set06" />

            <RelativeLayout
                android:id="@+id/layout_app_permision"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_app_permision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="更多应用/权限管理设置方式"
                    android:textColor="#0058c5"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/img_right_three"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="8.5dp"
                    android:layout_toRightOf="@+id/txt_app_permision"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_shake_right" />
            </RelativeLayout>

            <com.kulala.staticsview.image.smart.SmartImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_shake_set07" />

            <com.kulala.staticsview.image.smart.SmartImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_shake_set08" />

            <com.kulala.staticsview.image.smart.SmartImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_shake_set09" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>