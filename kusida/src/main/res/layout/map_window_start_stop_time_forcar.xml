<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
              android:orientation="vertical"
                tools:ignore="HardcodedText,ContentDescription"
    >
    <!--android:layout_width="175dp"-->
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="@drawable/bgst_round_white">

    <com.kulala.staticsview.image.smart.SmartImageView
        android:id="@+id/img_car_logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txt_car_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="15dp"
        android:layout_toRightOf="@+id/img_car_logo"
        android:gravity="top"
        android:text="酷A 88888"
        android:textColor="@color/black"
        android:textSize="12dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/img_car_logo"
        android:layout_below="@+id/txt_car_name"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_time_l"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:gravity="top"
            android:text="启动时长:"
            android:textColor="@color/black"
            android:textSize="9dp"/>

        <TextView
            android:id="@+id/txt_time_r"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:gravity="top"
            android:text="12:14:10"
            android:textColor="@color/yellow_text"
            android:textSize="14dp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/lin_btn"
        android:src="@color/gray_light"/>
    <LinearLayout
        android:id="@+id/lin_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_collect"
            android:layout_width="30dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@color/gray_light"/>

        <TextView
            android:id="@+id/txt_share"
            android:layout_width="30dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@color/gray_light"/>
        <TextView
            android:id="@+id/txt_navigate"
            android:layout_width="30dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="导航"
            android:textColor="@color/black"
            android:textSize="15dp"/>
    </LinearLayout>

</RelativeLayout>
    <com.kulala.staticsview.image.smart.SmartImageView
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:scaleType="fitXY"
        android:src="@drawable/map_start_stop_time_bg"/>
</LinearLayout>