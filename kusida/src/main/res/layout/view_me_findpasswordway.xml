<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:androidme="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <view.view4me.set.ClipTitleMeSet
        android:id="@+id/title_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        androidme:text="选择验证方式" />
    <RelativeLayout
        android:id="@+id/view_me_findpasswordway_by_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:visibility="visible"

        >
        <TextView
            android:id="@+id/view_me_findpasswordway_by_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/mobile_phone_number_to_reset"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/view_me_findpasswordway_by_phone_iv"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:src="@drawable/select_true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:src="@drawable/img_crossline"
        android:scaleType="fitXY"
        android:id="@+id/crossline_1"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/view_me_findpasswordway_by_aderess_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:visibility="gone">
        <TextView
            android:id="@+id/view_me_findpasswordway_by_aderess_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/email_to_reset"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/view_me_findpasswordway_by_aderess_iv"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:src="@drawable/select_false"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:src="@drawable/img_crossline"
        android:scaleType="fitXY"
        android:id="@+id/crossline_2"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/view_me_findpasswordway_by_problem_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:visibility="gone">
        <TextView
            android:id="@+id/view_me_findpasswordway_by_problem_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/anquanwenti_to_reset"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/view_me_findpasswordway_by_problem_iv"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/select_false"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/crossline_3"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:src="@drawable/img_crossline"
        android:scaleType="fitXY"
        android:visibility="gone"/>
</LinearLayout>
