<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:androidme="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:ignore="HardcodedText,ContentDescription">

    <view.view4me.set.ClipTitleMeSet
        android:id="@+id/title_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:text="@string/integral_rules" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_title"
                style="@style/Single_line_text_trans"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/how_to_obtain_the_integral"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/txt_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="left|top|center_horizontal"
                android:scrollbars="none"
                android:singleLine="false"
                android:text="@string/score_rule"
                android:textColor="@color/black"
                android:textSize="16dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>