<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <view.view4me.set.ClipTitleMeSet
        android:id="@+id/title_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        androidme:text="@string/security_authentication"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="22dp">
        <TextView
            android:id="@+id/small_tishi"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:text="@string/tip"
            android:textSize="14dp"
            android:padding="2dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"/>
        <TextView

            android:id="@+id/police_select_way"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/small_tishi"
            android:text="@string/please_enter_the_corresponding_answer"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:textColor="@color/blue_light"/>

    </RelativeLayout>


    <view.safetyneed.ViewAnswerGetItem
        android:id="@+id/question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <view.safetyneed.ViewAnswerGetItem
        android:id="@+id/question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>
    <view.safetyneed.ViewAnswerGetItem
        android:id="@+id/question3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/view_answer_submmit"
        style="@style/Button_round"
        android:layout_margin="20dp"
        android:text="@string/validation"/>

</LinearLayout>
