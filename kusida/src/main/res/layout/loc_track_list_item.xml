<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loc_track_14_round_white">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="14dp"
        android:text="888888"
        android:textSize="15dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="35dp"
        android:singleLine="false"
        android:text="2022年十月7日 19:03:56"
        android:textSize="12dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginStart="35dp"
        android:singleLine="false"
        android:text="2022年6月13日 19:03:03"
        android:textSize="12dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_start_aderess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_start_time"
        app:layout_constraintLeft_toRightOf="@+id/tv_start_time"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:text="|  广东东莞松山湖2025科技园"
        android:textSize="12dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_end_aderess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_end_time"
        app:layout_constraintLeft_toRightOf="@+id/tv_end_time"
        android:layout_marginStart="10dp"
        android:singleLine="false"
        android:text="|  广东东莞松山湖2025科技园"
        android:textSize="12dp"
        android:textColor="@color/black"/>
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/locator_icon_gray_line"/>
    <ImageView
        android:id="@+id/iv_line_vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_start_time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_end_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/icon_loc_track_lone_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginStart="14dp"
        />

    <ImageView
        android:id="@+id/select_status"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="6dp"
        android:src="@drawable/locator_icon_list_item_check_true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="4dp"
        />
    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="6dp"
        android:src="@drawable/icon_loc_track_share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        />
    <ImageView
        android:id="@+id/iv_colect"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="6dp"
        android:src="@drawable/icon_loc_track_colect_false"
        app:layout_constraintRight_toLeftOf="@+id/iv_share"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        />
    <ImageView
        android:id="@+id/iv_note"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="6dp"
        android:src="@drawable/icon_loc_track_note"
        app:layout_constraintRight_toLeftOf="@+id/iv_colect"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
