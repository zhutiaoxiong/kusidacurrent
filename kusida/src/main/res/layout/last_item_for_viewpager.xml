<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:background="#616984" />

    <RelativeLayout
        android:id="@+id/cardtype_layout"
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <TextView
            android:id="@+id/cardtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/primary_card"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/guide"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4.5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4.5dp"
            android:background="@drawable/wenhao_click" />
    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/touch_exit_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.01"
            android:background="@color/black"
            android:visibility="invisible" />
        <com.kulala.staticsview.image.smart.SmartImageView
            android:id="@+id/bg_green"
            android:layout_width="165dp"
            android:layout_height="345dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:background="@drawable/cardbg"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_width="155dp"
            android:layout_height="232dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:background="@color/background_all">

            <FrameLayout
                android:layout_width="125dp"
                android:layout_height="202dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bgst_round_black_alpha">

                <com.kulala.staticsview.image.smart.SmartImageView
                    android:id="@+id/card_pic"
                    android:layout_width="125dp"
                    android:layout_height="202dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/txt_card_count"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="9999"
                    android:textColor="#fff3cf"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/count"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignRight="@+id/card_pic"
                    android:layout_gravity="right"
                    android:background="@drawable/card_button_sharp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </FrameLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/give"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_below="@+id/layout_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/card_give_press"
            android:visibility="invisible" />

        <Button
            android:id="@+id/share"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_below="@+id/give"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/card_share_press"
            android:visibility="invisible" />
    </RelativeLayout>


</RelativeLayout>
