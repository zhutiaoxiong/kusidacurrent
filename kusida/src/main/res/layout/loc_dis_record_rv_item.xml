<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_work_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginStart="15dp"
        android:text="工作模式(深度休眠)"
        android:textSize="15dp"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/tv_send_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_work_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="15dp"
        android:singleLine="false"
        android:text="已发送"
        android:textSize="13dp"
        android:textColor="#888888"/>
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="33dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/locator_icon_gray_line"/>
    <TextView
        android:id="@+id/tv_reply_status"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:text="已回复"
        android:textSize="15dp"
        android:textColor="#0066ff"/>
    <TextView
        android:id="@+id/tv_send_time_one"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"
        android:text="2022年十月7日 19:03:56"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:textColor="#888888"/>
    <TextView
        android:id="@+id/tv_send_time_two"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"
        android:text="2022年十月7日 19:03:56"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:textColor="#888888"/>

</androidx.constraintlayout.widget.ConstraintLayout>
