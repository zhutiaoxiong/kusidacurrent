<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              tools:ignore="HardcodedText,ContentDescription">

    <LinearLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:orientation="vertical"
        android:background="@drawable/white_bg_bottom_radiu"
        android:clickable="true">

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/layout_black_bg"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/black_bg_top_radiu"/>

            <TextView
                android:id="@+id/car_num"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="京A8888"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="今天7：30"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/middle_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="100"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/cross_ball"/>

            <TextView
                android:id="@+id/first_time"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/img_left"
                android:text="8:00"
                android:textColor="@color/black"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/location_details"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/first_time"
                android:singleLine="true"
                android:text="| 广州市广州塔环城高速16号"
                android:textColor="@color/black"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/first_clock"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@+id/first_time"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/img_left"
                android:paddingBottom="14dp"
                android:paddingRight="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/first_clock"/>

            <TextView
                android:id="@+id/millage"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/location_details"
                android:layout_toRightOf="@+id/first_clock"
                android:paddingBottom="14dp"
                android:text="里程:60.8公里"
                android:textColor="@color/black"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/timelength"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/first_clock"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:paddingBottom="14dp"
                android:text="时长30分钟"
                android:textColor="@color/black"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/second_clock"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@+id/first_time"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/timelength"
                android:scaleType="fitXY"
                android:src="@drawable/second_clock"/>

            <ImageView
                android:id="@+id/beizhu_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@+id/first_clock"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/img_left"
                android:paddingBottom="14dp"
                android:paddingRight="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/beizhu"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/beizhu_txt"
                android:layout_width="wrap_content"
                android:layout_height="32dp"

                android:layout_below="@+id/millage"
                android:layout_toRightOf="@+id/beizhu_img"
                android:paddingBottom="14dp"
                android:text="去年买了个表草泥马草泥马草泥马草泥马草泥"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/second_time"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/beizhu_txt"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/img_left"
                android:gravity="right"
                android:text="8:00"
                android:textColor="@color/black"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/beizhu_txt"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/second_time"
                android:text="|  广州市广州塔环城高速"
                android:textColor="@color/black"
                android:textSize="14dp"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="45.5dp">

            <ImageView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="11dp"
                android:src="#d2d3d5"/>

            <ImageView
                android:id="@+id/pathdelete"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/view"
                android:layout_marginEnd="2dp"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_delete_gps_path"/>

            <ImageView
                android:id="@+id/pathshare"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/view"
                android:layout_toStartOf="@+id/pathdelete"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/pathshare"/>

            <ImageView
                android:id="@+id/pathshoucang"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/view"
                android:layout_toLeftOf="@+id/pathshare"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/pathshoucang"/>

            <ImageView
                android:id="@+id/pathbianji"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/view"
                android:layout_toStartOf="@+id/pathshoucang"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/pathbianji"/>
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/delete"
            android:layout_width="80dp"
            android:layout_height="205dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/red_radius_bg"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="18dp"/>
    </RelativeLayout>

</LinearLayout>