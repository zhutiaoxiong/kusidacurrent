<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/treasurebackgroud"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="114dp"
       >
    <com.kulala.staticsview.image.smart.SmartImageView
        android:id="@+id/card"
        android:layout_width="85dp"
        android:layout_height="137dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="61dp"
        />

        <TextView
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/audi_a5"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/card"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/card_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intermediate_card"
            android:textSize="15sp"
            android:textColor="@color/yellow_text"
            android:layout_alignLeft="@+id/car"
            android:layout_below="@+id/car"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/congratulation_get"
            android:layout_below="@+id/card"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:background="#80000000"
            android:gravity="center"/>
        <com.kulala.staticsview.image.smart.SmartImageView
            android:id="@+id/treasure_open"
            android:layout_width="254dp"
            android:layout_height="254dp"
            android:src="@drawable/opentreasure"
            android:scaleType="fitXY"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/card"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            />

        <com.ant.liao.GifView
            android:id="@+id/treasure_open_gif"
            android:layout_width="254dp"
            android:layout_height="254dp"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/card"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            />
    </RelativeLayout>


    <!--<com.kulala.staticsview.image.smart.SmartImageView-->
