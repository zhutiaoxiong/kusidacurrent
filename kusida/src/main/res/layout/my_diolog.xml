<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="207dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:layout_width="300dp"
            android:layout_height="163dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/order_diolog_top_bg"/>
        <Button
            android:id="@+id/cancle"
            android:layout_width="150dp"
            android:layout_height="44dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/order_diolog_bottom_left_bg"
            android:text="取消"
            android:textSize="16dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/sure"
            android:layout_width="150dp"
            android:layout_height="44dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/order_diolog_bottom_right_bg"
            android:text="确定"
            android:textSize="16dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/mode"
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="工作模式"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <TextView
            android:id="@+id/time_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mode"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:text="定时开关机(耗电低)"
            android:layout_marginTop="12dp"
            android:layout_marginStart="26dp"/>
        <TextView
            android:id="@+id/delay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_switch"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:text="间隔时间"
            android:layout_marginTop="23dp"
            android:layout_marginStart="26dp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delay_time"
            android:textColor="#888888"
            android:textSize="13dp"
            android:text="1小时"
            android:layout_marginTop="5dp"
            android:layout_marginStart="26dp"/>
        <ImageView
            android:id="@+id/arrow_top"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="17dp"
            android:src="@drawable/order_diolog_down_jiantou"
            />
        <ImageView
            android:id="@+id/arrow_bottom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrow_top"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="17dp"
            android:src="@drawable/order_diolog_down_jiantou"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>