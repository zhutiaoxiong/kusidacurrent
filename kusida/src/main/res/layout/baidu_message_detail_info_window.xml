<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="275dp"
    android:layout_height="160dp">

    <ImageView
        android:layout_width="275dp"
        android:layout_height="160dp"
        android:src="@drawable/map_info_message_detail_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txt_top_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="888888"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txt_bao_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_top_left"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:text="震动报警"
        android:textColor="@color/white"
        android:textSize="13dp"
        />
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_bao_type"
        android:layout_marginStart="24dp"
        app:layout_goneMarginTop="3dp"
        android:text="日期 :   2022-6-13 12:00"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:textSize="13dp"
        />
    <TextView
        android:id="@+id/txt_aderess"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_time"
        android:layout_marginStart="24dp"
        app:layout_goneMarginTop="3dp"
        android:text="地址 :   广东省东莞市兴惠路硅谷动力2025科技园"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:textSize="13dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>