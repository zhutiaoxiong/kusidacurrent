<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/annual_background_top"
                android:padding="0dp"
                tools:ignore="HardcodedText,ContentDescription">

    <ImageView
        android:id="@+id/img_left"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@android:color/transparent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_toRightOf="@+id/img_left"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="135161"
        android:textColor="@color/white"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/txt_right"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_toLeftOf="@+id/img_right"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="135161"
        android:textColor="@color/annual_white_txt"
        android:textSize="15dp"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/txt_input"
        android:layout_width="wrap_content"
        android:minWidth="120dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:layout_toLeftOf="@+id/img_right"
        android:gravity="right|center_vertical"
        android:paddingLeft="10dp"
        android:maxLength="8"
        android:hint="点击输入"
        android:digits="@string/number_digits"
        android:textColor="@color/annual_white_txt"
        android:textSize="15dp"
        android:inputType="number"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_imgr"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:text="元"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/img_right"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/annual_arrow_right"/>

    <ImageView
        android:id="@+id/img_splitline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_crossline"/>
</RelativeLayout>