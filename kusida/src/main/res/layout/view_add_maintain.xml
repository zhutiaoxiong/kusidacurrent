        <TextView
            android:id="@+id/txt_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@color/blue_light"
            android:textSize="16dp"
            android:text="@string/confirm"
            android:alpha="0.5"
            android:enabled="false"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"/>
    <!--</LinearLayout>-->
    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/title_head"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/maintain_mileage"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/maintain_mileage_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:text="@string/maintain_mileage_select"
            android:gravity="right|center_vertical"/>
        <ImageView
            android:id="@+id/arrow_right_1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/right_chacha"/>
    </LinearLayout>
    <View
        android:id="@+id/cross_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/layout_1"
        android:background="@drawable/down_line"
        />
    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/cross_line"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/maintain_time"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/maintain_time_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:background="@color/white"
            android:gravity="right|center_vertical"
            android:text="@string/maintain_time_select"
           />
        <ImageView
            android:id="@+id/arrow_right_2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/right_chacha"/>
    </LinearLayout>
    <View
        android:id="@+id/cross_line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/layout_2"
        android:background="@drawable/down_line"
        />
    <LinearLayout
        android:id="@+id/layout_3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/cross_line1"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/maintain_car"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/maintain_car_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:background="@color/white"
            android:gravity="right|center_vertical"
            android:text="@string/maintain_car_select"
            />
        <ImageView
            android:id="@+id/arrow_right_3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/right_chacha"/>
    </LinearLayout>
</RelativeLayout>