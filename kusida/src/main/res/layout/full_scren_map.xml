    <ImageView
        android:id="@+id/img_gotocar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_above="@+id/img_gotoarea"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/map_gotocar"/>

    <ImageView
        android:id="@+id/img_gotoarea"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_above="@+id/img_gotoself"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/map_gotoarea"/>

    <ImageView
        android:id="@+id/img_gotoself"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
