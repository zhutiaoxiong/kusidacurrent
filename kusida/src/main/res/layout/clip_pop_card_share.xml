<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/cancle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:text="@string/cancle"
        android:textColor="#7bb3f1"
        android:textSize="15dp"
        android:background="@drawable/card_share_cancle"/>
    <RelativeLayout
        android:layout_above="@+id/cancle"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/card_share_cancle">
        <ImageView
            android:id="@+id/icon_share_wx"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="41.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_share_wx_friend"/>
        <ImageView
            android:id="@+id/icon_share_wx_friend"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="41.5dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_share_wx_bolo" />
        <TextView
            android:layout_width="104dp"
            android:layout_height="43dp"
            android:layout_below="@+id/icon_share_wx_friend"
            android:textColor="#8f8e94"
            android:textSize="15dp"
            android:text="@string/wechat"
            android:layout_marginLeft="57dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="104dp"
            android:layout_height="43dp"
            android:layout_below="@+id/icon_share_wx_friend"
            android:textColor="#8f8e94"
            android:textSize="15dp"
            android:text="@string/wechat"
            android:layout_alignParentRight="true"
            android:layout_marginRight="57dp"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>