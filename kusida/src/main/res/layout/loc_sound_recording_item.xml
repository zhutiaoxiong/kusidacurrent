<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 >
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="2022年十月7日 19:03:56"
        android:textSize="10dp"
        android:textColor="#888787"/>
    <ImageView
        android:id="@+id/img_sound"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/icon_sound_record"
        android:layout_marginTop="7dp"
        android:layout_marginStart="12dp"/>
    <ImageView
        android:id="@+id/img_sanjiao"
        android:layout_width="7.5dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toRightOf="@+id/img_sound"
        android:src="@drawable/img_record_sanjiao"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"/>
    <View
        android:id="@+id/img_sound_bg"
        android:layout_width="100dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toRightOf="@+id/img_sanjiao"
        android:background="@drawable/sound_item_bg_round"
        android:layout_marginTop="7dp"
        />
    <ImageView
        android:id="@+id/img_sound_card"
        android:layout_width="27dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintRight_toRightOf="@+id/img_sound_bg"
        android:src="@drawable/icon_sound_play_card_one"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"/>
    <ImageView
        android:id="@+id/img_sound_play"
        android:layout_width="12dp"
        android:layout_height="16.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toRightOf="@+id/img_sanjiao"
        android:src="@drawable/icon_sound_emission"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"/>
    <com.ant.liao.GifView
        android:id="@+id/img_sound_play_gif"
        android:layout_width="12dp"
        android:layout_height="16.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toRightOf="@+id/img_sanjiao"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toRightOf="@+id/img_sound_play"
        android:layout_marginTop="7dp"
        android:layout_marginStart="12dp"
        android:text="15"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:textColor="#888787"/>
    <ImageView
        android:id="@+id/select_status"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="6dp"
        android:src="@drawable/locator_icon_list_item_check_true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
