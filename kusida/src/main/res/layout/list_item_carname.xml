<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/Single_line_with_background"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              tools:ignore="HardcodedText,ContentDescription">

    <ImageView
        android:id="@+id/image_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/select_true"/>

    <TextView
        android:id="@+id/image_main"
        android:layout_width="46dp"
        android:layout_height="28dp"
        android:background="@drawable/isactive_bg"
        android:gravity="center"
        android:text="副车主"
        android:visibility="gone" />


    <!-- <ImageView
         android:id="@+id/image_icon"
         android:layout_width="42dp"
         android:layout_height="42dp"
         android:layout_margin="4dp"
         android:scaleType="fitCenter"/>-->

    <com.kulala.staticsview.image.smart.SmartImageView
        android:id="@+id/image_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_margin="4dp"
        android:layout_marginLeft="12dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/textView"
        style="@style/Single_line_text_trans"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:text="测A S586B"/>

    <ImageView
        android:id="@+id/img_bluetooth"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_control_model_bluetooth_off"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/txt_active"
        android:layout_width="45dp"
        android:layout_height="24dp"
        android:layout_marginRight="15dp"
        android:textSize="14dp"
        android:text="未激活"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/isactive_bg"
       />

</LinearLayout>