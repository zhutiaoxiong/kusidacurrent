<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:androidme="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              tools:ignore="HardcodedText,ContentDescription">

    <view.view4me.set.ClipTitleMeSet
        android:id="@+id/title_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:text="触摸无匙进入"/>
    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="15dp"
        android:layout_below="@+id/title_head"
        android:text="请检查是否打开手机蓝牙，是否已经站在车辆旁边，连接蓝牙后才能使用此功能"/>

    <view.view4me.shake.ClipLeftTxtRightCheckBox
        android:id="@+id/txt_touch_in"
        android:layout_below="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        androidme:text="触摸无匙进入"/>


    <RelativeLayout
        android:id="@+id/lin_touch_in"
        android:layout_below="@+id/txt_touch_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/lin_l"
            android:layout_width="90dp"
            android:layout_height="125dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/all_background_color">

            <common.global.TextViewEC
                android:id="@+id/txt_elc_open"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="13dp"
                android:text="--"
                android:textColor="@color/blue_light"
                android:gravity="center"
                android:textSize="26sp"
                android:background="@color/all_background_color"
                />
            <Button
                android:id="@+id/btn_set_kaojin_open"
                android:layout_width="69dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:layout_centerHorizontal="true"
                android:background="@color/all_background_color"
                android:text="设置"
                android:textSize="12dp"
                android:textColor="@color/black"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lin_r"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/lin_l"
            android:background="@color/all_background_color">

            <ImageView
                android:id="@+id/ivv"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/touch_in_man"/>
            <view.view4me.shake.ProItemLinshi
                android:id="@+id/unlock_pamduan_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                androidme:bottomTxt=""
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivv"
                android:layout_marginStart="10dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/ttt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_l"
            android:layout_margin="15dp"
            android:singleLine="false"
            android:text="此处的距离指的是手机离车辆距离，打开触摸无匙进入功能开关后，只有携带手机靠近车辆小于这个距离范围，才能合法通过触摸挡风玻璃的NFC模块开锁或关锁。"
            android:textColor="@color/black"
            android:textSize="16dp"
            />
        <View
            android:id="@+id/line_three"
            android:layout_below="@+id/ttt"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/down_line"/>
    </RelativeLayout>




    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/carstate_giveone"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:textSize="12dp"
        android:text="注意：安装人员不要配对，以免影响产品交付测试"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:layout_marginBottom="5dp"
        android:text="为了稳定使用无匙进入功能，车主请点击‘发起配对’配对蓝牙到手机。"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/peidui"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="发起配对"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_above="@+id/tv1"
        android:textSize="16dp"
        android:layout_marginBottom="5dp"
        android:background="@color/all_background_color"
        android:visibility="invisible"/>



    <RelativeLayout
        android:id="@+id/touch_in_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_head"
        android:visibility="invisible"
       >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.7"/>
        <view.view4me.shake.ViewNokeyPopWindow
            android:id="@+id/nokey_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
           />
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:text="点击空白处取消"
            android:textSize="12dp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/loading_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_head"
        android:descendantFocusability="blocksDescendants" >

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@color/black"
            android:gravity="top" >

            <ProgressBar
                android:id="@+id/loading_view_progressbar"
                style="@style/loadingViewProgressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/loading_view_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loading_view_progressbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="数据获取中..."
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_windows"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="invisible">
        <RelativeLayout
            android:id="@+id/re2_a"
            android:layout_width="328dp"
            android:layout_height="184dp"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/shake_tip_bg" />
            <LinearLayout
                android:id="@+id/li1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_shake_warning"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/carstate_giveone"
                    android:textSize="16dp"
                    android:text="注意事项"
                    android:gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_content"
                android:layout_below="@+id/li1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:text="1.\t请确保手机蓝牙常开启，以便APP自动连接蓝牙。\n\n2.\t请到手机设置中找到【应用启动管理】项目,设置允许\n\n\t\t本APP后台活动，否则APP后台活动被禁止后无法自动\n\n\t\t连接蓝牙并使用该功能"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <Button
                    android:id="@+id/btn_know"
                    android:layout_width="0dp"
                    android:layout_height="42.5dp"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textColor="@drawable/skin_color_button"
                    android:text="知道了"
                    android:gravity="center"
                    android:background="@drawable/shake_control_bg"/>
                <Button
                    android:id="@+id/btn_cancle"
                    style="@style/ButtonChangeBgAndTextColor"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="取消"
                    android:gravity="center"
                    android:background="@drawable/img_shake_toast_03"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>