<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/white_stroke_bg"
    tools:ignore="HardcodedText,ContentDescription">



    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="1568496456545"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_type"
        android:layout_centerHorizontal="true"
        android:text="1568496456545"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:textSize="14dp" />
    <ImageView
        android:id="@+id/delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_nokey_delete"
        android:layout_below="@+id/text_info"
        android:layout_marginStart="15dp"
        />

    <ImageView
        android:id="@+id/add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_nokey_add"
        android:layout_below="@+id/text_info"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        />

    <common.global.TextViewEC
        android:id="@+id/txt_elc_close"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="88"
        android:textColor="@color/blue_light"
        android:textSize="55sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_info"/>
    <TextView
        android:id="@+id/text_info_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_elc_close"
        android:layout_centerHorizontal="true"
        android:text="1568496456545"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:textSize="14dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/set"
        android:layout_below="@+id/text_info_open"
        android:layout_marginTop="10dp"
        android:layout_width="69dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:background="@color/all_background_color"
        android:text="确定"
        android:textSize="16dp"
        android:textColor="@color/black"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/set"/>
</RelativeLayout>