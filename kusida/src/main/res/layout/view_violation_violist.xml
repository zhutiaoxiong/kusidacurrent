<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_all"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription" >

    <com.kulala.staticsview.titlehead.ClipTitleHead
        android:id="@+id/title_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:text="@string/violation_of_the_list"
        androidme:leftres="@drawable/titlehead_back"/>
    <ListView
        android:id="@+id/list_cars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_head"
        android:divider="@drawable/img_crossline"
        android:dividerHeight="1dp"
        android:gravity="center"
        android:textSize="16dp"/>

    <RelativeLayout
        android:id="@+id/lin_no_violation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@drawable/img_no_violation"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginTop="15dp"
            android:gravity="center"
            style="@style/Single_line_text_trans"
            android:text="@string/do_not_check_on_earth_are_you_have_violations"/>

    </RelativeLayout>
</RelativeLayout>