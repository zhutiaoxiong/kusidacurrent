<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:androidme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_all"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription" >

    <com.kulala.staticsview.titlehead.ClipTitleHead
        android:id="@+id/title_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidme:text="@string/violation_of_the_details"
        androidme:leftres="@drawable/titlehead_back"/>
    <TextView
        android:id="@+id/txt_fee"
        style="@style/Single_line_with_background"
        android:singleLine="false"
        android:gravity="left|center_vertical"
        android:text="罚款金额：500元" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_crossline" />
    <TextView
        android:id="@+id/txt_place"
        style="@style/Single_line_with_background"
        android:singleLine="false"
        android:gravity="left|center_vertical"
        android:text="@string/illegal_sites_five_hundred_yuan" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_crossline" />
    <TextView
        android:id="@+id/txt_reason"
        style="@style/Single_line_with_background"
        android:singleLine="false"
        android:gravity="left|center_vertical"
        android:text="@string/illegal_reason_five_hundred_yuan" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_crossline" />
    <TextView
        android:id="@+id/txt_code"
        style="@style/Single_line_with_background"
        android:singleLine="false"
        android:gravity="left|center_vertical"
        android:text="@string/violation_of_the_code_five_hundred_yuan" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_crossline" />
    <TextView
        android:id="@+id/txt_completed"
        style="@style/Single_line_with_background"
        android:singleLine="false"
        android:gravity="left|center_vertical"
        android:text="@string/processing_state_five_hundred_yuan" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_crossline" />
    <TextView
        android:id="@+id/txt_score"
        style="@style/Single_line_with_background"
        android:singleLine="false"
        android:gravity="left|center_vertical"
        android:text="@string/illegal_points_five_hundred_yuan" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_crossline" />
</LinearLayout>