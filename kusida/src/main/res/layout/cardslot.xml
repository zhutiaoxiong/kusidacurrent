<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    >
    <com.kulala.staticsview.image.smart.SmartImageView
        android:id="@+id/bg_green"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/cardbg"/>
    <RelativeLayout
        android:id="@+id/black_bg"
        android:layout_width="match_parent"
        android:layout_height="150.5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/background_all">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_margin="8.25dp"
            android:background="@drawable/card_bg_black">
            <com.kulala.staticsview.image.smart.SmartImageView
                android:id="@+id/card_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <TextView
                android:visibility="invisible"
                android:id="@+id/txt_card_count"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="90dp"
                android:text="9999"
                android:gravity="center"
                android:textColor="#fff3cf"
                android:textSize="15dp"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:visibility="invisible"
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/card_share_press"/>

    <Button
        android:visibility="invisible"
        android:id="@+id/give"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
       android:layout_above="@+id/share"
        android:layout_marginBottom="5dp"
        android:background="@drawable/card_give_press"/>
    <Button
        android:visibility="visible"
        android:id="@+id/count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="18dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/card_button_sharp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="12dp" />
</RelativeLayout>
