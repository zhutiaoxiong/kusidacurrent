<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <fragment
        android:id="@+id/fragment_actionbar"
        class="view.basicview.FragmentActionBar"
        android:name="view.basicview.FragmentActionBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"/>
<!-- android:background="@color/blue_text"-->
    <FrameLayout
        android:id="@+id/layer_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@+id/fragment_actionbar"
        android:contentDescription="有ActionBar的fragment"/>


    <RelativeLayout
        android:id="@+id/layer_outer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:contentDescription="无ActionBar的下级页面"/>

    <RelativeLayout
        android:id="@+id/layer_toast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/layer_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/scale_text"
        style="@style/Single_line_with_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/prompt_box_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/exit_prompt_box_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/exitdemo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:id="@+id/shake_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
