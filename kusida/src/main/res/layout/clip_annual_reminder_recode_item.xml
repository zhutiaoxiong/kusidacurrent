<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/annual_bgst_round_black_fir"
              android:orientation="vertical"
              tools:ignore="HardcodedText,ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_annual_day"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="2016"
            android:textColor="@color/green_light"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/txt_repair"
            android:layout_width="44dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/annual_bgst_round_white_board"
            android:gravity="center"
            android:text="修改"
            android:textColor="@color/annual_white_txt"
            android:textSize="12dp"/>

    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/gray"/>

    <TextView
        android:id="@+id/txt_annual_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="年检日期:"
        android:textColor="@color/white"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/txt_annual_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="年检费用:"
        android:textColor="@color/white"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/txt_annual_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:singleLine="false"
        android:lines="2"
        android:ellipsize="end"
        android:text="备　　注:"
        android:textColor="@color/white"
        android:textSize="15dp"/>

</LinearLayout>