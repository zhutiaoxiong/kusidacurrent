<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:androidme="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="345dp"
                android:layout_height="89dp"
                tools:ignore="HardcodedText,ContentDescription">

    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/view_app_top_view_bg"
        />
    <ImageView
        android:id="@+id/iv_fence"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/app_area"
        />

    <TextView
        android:id="@+id/tv_fence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_fence"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="电子围栏"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/iv_track"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@drawable/app_track"
        android:layout_toEndOf="@+id/iv_fence"
        android:layout_marginStart="141dp"
        />

    <TextView
        android:id="@+id/tv_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_track"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="行车轨迹"
        android:textStyle="bold"
        />
</RelativeLayout>