<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/Single_line_with_background"
                tools:ignore="HardcodedText,ContentDescription">

    <TextView
        android:id="@+id/txt_title"
        style="@style/Single_line_text_trans"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:minEms="6"
        android:paddingLeft="10dp"
        android:text="@string/deputy_owner_management"/>

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/img_red_point"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="17dp"
        android:scaleType="fitXY"
        android:layout_toRightOf="@+id/txt_title"
        android:src="@drawable/icon_red_point"
        android:clickable="false"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/txt_input"
        style="@style/Single_line_text_trans"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_toLeftOf="@+id/img_right"
        android:layout_toRightOf="@+id/txt_title"
        android:gravity="right|center_vertical"
        android:inputType="none"
        android:paddingLeft="0dp"
        android:singleLine="false"
        android:text=""
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txt_input_show"
        style="@style/Single_line_text_trans"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_toLeftOf="@+id/img_right"
        android:layout_toRightOf="@+id/txt_title"
        android:gravity="right|center_vertical"
        android:paddingLeft="0dp"
        android:paddingRight="10dp"
        android:maxLines="2"
        android:singleLine="false"
        android:text=""/>

    <ImageView
        android:id="@+id/img_splitline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_crossline"
        android:visibility="invisible"/>
</RelativeLayout>