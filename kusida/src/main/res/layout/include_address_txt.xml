<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/Single_line_with_background"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/all_background_color"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/img_gps"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_gps_location"/>

    <TextView
        android:id="@+id/txt_carname"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/img_gps"
        android:gravity="left|bottom"
        android:text="粤A S386B"
        android:textColor="@color/blue_light"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txt_carname"
        android:gravity="bottom|left"
        android:singleLine="true"
        android:text="2016-03-01 11:13:26"
        android:textColor="@color/black"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/txt_place"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_time"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/img_gps"
        android:gravity="left|top"
        android:singleLine="true"
        android:text="广东省中山市富进路中山大道769号中山大厦"
        android:textColor="@color/black"
        android:textSize="14dp"/>
</RelativeLayout>