<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#efeff4"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:src="@color/all_background_color"/>

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="13dp"
            android:scaleType="fitXY"
            android:src="@drawable/title_back"/>

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:alpha="0.5"
                android:background="@drawable/gray_bg_12radius"
                android:gravity="left|center_vertical"
                android:paddingLeft="38dp"
                android:text="搜索"
                android:textColor="#b2b3b5"
                android:textSize="14dp"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="5dp"
                android:padding="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_record_search"/>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="家和公司"
            android:textColor="#b2b3b5"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/set"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:padding="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/set_white"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="#d2d3d5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_gohome"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_home"/>

            <TextView
                android:id="@+id/txt_gohome"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_gohome"
                android:gravity="bottom"
                android:text="回家"
                android:textColor="#242323"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/txt_home"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/txt_gohome"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_gohome"
                android:ellipsize="end"
                android:gravity="top"
                android:singleLine="true"
                android:text="点击设置"
                android:textColor="#b2b3b5"
                android:textSize="12dp"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="#d2d3d5"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_company"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_company"/>

            <TextView
                android:id="@+id/txt_gocompany"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_company"
                android:gravity="bottom"
                android:text="去公司"
                android:textColor="#242323"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/txt_company"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/txt_gocompany"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_company"
                android:ellipsize="end"
                android:gravity="top"
                android:singleLine="true"
                android:text="点击设置"
                android:textColor="#b2b3b5"
                android:textSize="12dp"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/li2"
        android:scaleType="fitXY"
        android:src="#d2d3d5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/li_gas"
            android:layout_width="50dp"
            android:layout_height="98dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_gas_station"/>

            <TextView
                android:id="@+id/txt_gas_station"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="加油站"
                android:textColor="#242323"
                android:textSize="14dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/li_carpark"
            android:layout_width="50dp"
            android:layout_height="98dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_car_park"/>

            <TextView
                android:id="@+id/txt_car_park"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="停车场"
                android:textColor="#242323"
                android:textSize="14dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/li_collect"
            android:layout_width="50dp"
            android:layout_height="98dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_collect"/>

            <TextView
                android:id="@+id/txt_collect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="收藏点"
                android:textColor="#242323"
                android:textSize="14dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/line3"
        android:layout_marginTop="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_adress_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/img_adress_history"
            android:gravity="center_vertical"
            android:text="搜索历史"
            android:textColor="#d2d3d5"
            android:textSize="14dp"/>

        <ImageView
            android:id="@+id/img_adress_history"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="10dp"
            android:padding="9dp"
            android:scaleType="fitXY"
            android:src="@drawable/deleteall"/>

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="#d2d3d5"/>
    </RelativeLayout>


    <com.kulala.staticsview.listview.SwipeListView
        android:id="@+id/listview_adress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="#d2d3d5"
        android:dividerHeight="1dp"
        android:paddingLeft="10dp"
        android:scrollbars="none"/>
</LinearLayout>