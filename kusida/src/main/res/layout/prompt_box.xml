<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/prompt_layout"
    >

    <View
        android:id="@+id/touch_exit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.01"/>

    <LinearLayout
        android:layout_marginTop="252dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/demo_prome"
        >

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/the_tip"
        android:textSize="16dp"
        android:textColor="#212020"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/please_choose"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/no_activation_device_please_choose"
        android:textSize="15dp"
        android:textColor="#212020"
        android:gravity="center_horizontal"
        />
        <View
            android:background="@color/gray_text"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
       >
        <Button
            android:id="@+id/activate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textColor="#4a4a4a"
            android:background="@drawable/activate_button"
            android:text="@string/activate_the_device"/>
        <View
            android:background="@color/gray_text"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/demo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textColor="#4a4a4a"
            android:text="@string/simulation_demonstration"
            android:background="@color/white"
            android:visibility="gone"/>
        <View
            android:background="@color/gray_text"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:layout_weight="1"
            android:textColor="#4173d6"
            android:text="@string/buy_equipment"
            android:background="@drawable/buy_shebei_button"
            android:visibility="gone"/>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
