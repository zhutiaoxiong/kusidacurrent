<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              tools:ignore="HardcodedText,ContentDescription">
    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:id="@+id/swipeMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="135dp">

 <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@drawable/button_selector_allback_color_select"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/re_out">

            <com.kulala.staticsview.image.smart.SmartImageView
                android:id="@+id/img_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"/>

            <ImageView
                android:id="@+id/img_usenow"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/carman_usenow"/>

            <TextView
                android:id="@+id/txt_carname"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="18dp"
                android:layout_toLeftOf="@+id/img_bluetooth"
                android:layout_toRightOf="@+id/img_icon"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="车牌号"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_cartype"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_below="@+id/txt_carname"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/img_bluetooth"
                android:layout_toRightOf="@+id/img_icon"
                android:alpha="0.5"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="车分类"
                android:textColor="@color/black"
                android:textSize="12dp"/>

            <ImageView
                android:id="@+id/img_bluetooth"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txt_carstate"
                android:src="@drawable/carman_blue_on"/>

            <TextView
                android:id="@+id/txt_carstate"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="已激活"
                android:textColor="@color/carstate_active"
                android:textSize="13dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:src="@color/gray"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_bt_blue"
                android:layout_width="50dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:scaleType="fitEnd"
                android:src="@drawable/carman_bt_blue"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txt_bt_blue"
                android:layout_width="50dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="蓝牙"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:src="@color/gray"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_bt_model"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="right|center_vertical"
                android:scaleType="fitEnd"
                android:src="@drawable/carman_bt_model"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txt_bt_model"
                android:layout_width="50dp"
                android:layout_weight="25"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="模组"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txt_equipment"
                android:layout_width="50dp"
                android:layout_weight="100"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="14dp"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:src="@color/gray"
               />

            <ImageView
                android:id="@+id/img_bt_detail"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="right|center_vertical"
                android:scaleType="fitEnd"
                android:src="@drawable/carman_bt_detail"/>
            <TextView
                android:id="@+id/txt_bt_detail"
                android:layout_width="50dp"
                android:layout_weight="25"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="详情"
                android:textSize="14dp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:src="@color/gray"/>

            <ImageView
                android:id="@+id/img_bt_select"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="right|center_vertical"
                android:scaleType="fitEnd"
                android:src="@drawable/carman_bt_select_off"/>

            <TextView
                android:id="@+id/txt_bt_select"
                android:layout_width="50dp"
                android:layout_weight="25"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="选择"
                android:textSize="14dp"
                android:textColor="@color/black"/>
        </LinearLayout>


    </RelativeLayout>

        <LinearLayout
            android:id="@+id/delete"
            android:layout_width="95dp"
            android:layout_height="135dp"
            android:orientation="horizontal">
            <TextView

                android:layout_width="80dp"
                android:layout_height="135dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/red_radius_bg"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="18dp"
                tools:ignore="DuplicateIds"
                android:layout_marginStart="15dp"
                />
        </LinearLayout>

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>


</LinearLayout>