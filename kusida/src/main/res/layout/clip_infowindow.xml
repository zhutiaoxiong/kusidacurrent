<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="182dp"
    android:layout_height="80dp"
    tools:ignore="HardcodedText,ContentDescription" >
        <View
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:background="@color/background_all" />
        <TextView
            android:id="@+id/txt_favorite"
            style="@style/Single_line_with_background"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:text="@string/collection"/>
        <TextView
            android:id="@+id/txt_share"
            style="@style/Single_line_with_background"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/txt_favorite"
            android:layout_alignParentTop="true"
            android:layout_marginRight="1dp"
            android:text="@string/share"/>
        <TextView
            android:id="@+id/txt_navoritee"
            style="@style/Single_line_with_background"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/txt_share"
            android:layout_alignParentTop="true"
            android:text="@string/navigation"/>

        <ImageView
            android:id="@+id/img_gps"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_below="@+id/txt_favorite"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_navi_winbottom" />


</RelativeLayout>