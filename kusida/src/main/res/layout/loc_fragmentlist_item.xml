<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/loc_fragment_item_bg"
    >

    <ImageView
        android:id="@+id/loc_state"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/locator_icon_list_item_true"
       />
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/loc_state"
        android:layout_marginTop="11dp"
        android:layout_marginStart="8dp"
        android:singleLine="false"
        android:text="原创888"
        android:textSize="15dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="5dp"
        android:singleLine="false"
        android:text="在线120小时30分钟30秒"
        android:textSize="15dp"
        android:textColor="#0066ff"/>
    <TextView
        android:id="@+id/tv_equipment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        app:layout_constraintLeft_toRightOf="@+id/loc_state"
        android:layout_marginTop="1dp"
        android:layout_marginStart="8dp"
        android:singleLine="false"
        android:text="设备编号：88888888"
        android:textSize="12dp"
        android:textColor="#c6c6c6"/>
    <TextView
        android:id="@+id/msi_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_equipment_number"
        app:layout_constraintLeft_toRightOf="@+id/loc_state"
        android:layout_marginTop="1dp"
        android:layout_marginStart="8dp"
        android:singleLine="false"
        android:text="MSI号：88888888"
        android:textSize="12dp"
        android:textColor="#c6c6c6"/>
    <TextView
        android:id="@+id/tv_last_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/msi_number"
        app:layout_constraintLeft_toRightOf="@+id/loc_state"
        android:layout_marginTop="1dp"
        android:layout_marginStart="8dp"
        android:singleLine="false"
        android:text="录音剩余:500"
        android:textSize="12dp"
        android:textColor="#c6c6c6"/>
        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="85dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/locator_icon_gray_line"/>
    <TextView
        android:id="@+id/tv_guding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="6dp"
        android:singleLine="false"
        android:text="备注:"
        android:textSize="15dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintLeft_toRightOf="@+id/tv_guding"
        app:layout_constraintRight_toLeftOf="@+id/view2"
        android:layout_marginStart="6dp"
        android:singleLine="false"
        android:text="这是一个备注"
        android:textSize="12dp"
        android:textColor="#c6c6c6"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_1"
        android:layout_width="95dp"
        android:layout_height="44dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/select_status"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/locator_icon_list_item_check_true"
                />
            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择"
                android:textSize="15dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="44dp"
        app:layout_constraintRight_toLeftOf="@+id/cons_1"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:background="@drawable/locator_icon_gray_line_vertical"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_2"
        android:layout_width="95dp"
        android:layout_height="44dp"
        app:layout_constraintRight_toLeftOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@id/view">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/locator_icon_list_item_more"
                />
            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="15dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="44dp"
        app:layout_constraintRight_toLeftOf="@+id/cons_2"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:background="@drawable/locator_icon_gray_line_vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>
