<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginStart="12dp"
        android:text="震动报警"
        android:textSize="15dp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/red_round"
        android:layout_width="7dp"
        android:layout_height="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_type"
        android:src="@drawable/locator_icon_red_round"
        android:layout_marginTop="7dp"/>
    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="13dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_type"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/locator_icon_gray_location"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:id="@+id/tv_aderess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_type"
        app:layout_constraintLeft_toRightOf="@+id/iv_location"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:singleLine="false"
        android:text="广东东莞松山湖2025科技园"
        android:textSize="13dp"
        android:textColor="#c6c6c6"/>
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="33dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/locator_icon_gray_line"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:singleLine="false"
        android:text="2022年十月7日 19:03:56"
        android:textSize="13dp"
        android:textColor="#c6c6c6"/>
    <ImageView
        android:id="@+id/select_status"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="6dp"
        android:src="@drawable/locator_icon_list_item_check_true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
