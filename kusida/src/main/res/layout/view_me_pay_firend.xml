<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
                xmlns:androidme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="HardcodedText,ContentDescription" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <view.view4me.set.ClipTitleMeSet
            android:id="@+id/title_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            androidme:text="@string/to_top_up_your_friends" />

        <view.clip.ClipLineBtnInptxt
            android:id="@+id/txt_username"
            style="@style/Single_line_with_background"
            androidme:lefttxt="@string/mobile_phone_number_aa"
            androidme:gravityTxt="left"
            androidme:righthint="@string/not_to_choose"
            androidme:rightres="@drawable/delete"/>
        <view.clip.ClipLineBtnInptxt
            android:id="@+id/txt_carname"
            style="@style/Single_line_with_background"
            androidme:lefttxt="@string/top_up_vehicles"
            androidme:gravityTxt="left"
            androidme:righthint="@string/not_to_choose"
            androidme:splitLine="false"
            androidme:rightres="@drawable/right_chacha"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <view.clip.me.ClipPayItem
                android:id="@+id/pay1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="50" />

            <view.clip.me.ClipPayItem
                android:id="@+id/pay2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <view.clip.me.ClipPayItem
                android:id="@+id/pay3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="50" />

            <view.clip.me.ClipPayItem
                android:id="@+id/pay4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="50" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:text="@string/method_of_payment_simbol"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <view.clip.me.ClipPayItem
                android:id="@+id/pay5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="50" 
                androidme:background="@drawable/icon_pay_weixing"/>

            <view.clip.me.ClipPayItem
                android:id="@+id/pay6"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="50" 
                androidme:background="@drawable/icon_pay_checkpay"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            style="@style/Button_round"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="@string/top_up_now" />
    </LinearLayout>

</RelativeLayout>