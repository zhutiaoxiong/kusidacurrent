<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/background_top"
                android:descendantFocusability="blocksDescendants">

    <com.kulala.staticsview.image.smart.SmartImageView
        android:id="@+id/img_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/head_no"/>

    <TextView
        android:id="@+id/view_find_download_listview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/img_icon"
        android:text="@string/white_car"
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/view_find_download_listview_packagesize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_icon"
        android:text="1.25M"
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txt_bought_or_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/view_find_download_listview_packagesize"
        android:text="@string/have_to_buy"
        android:textSize="14sp"
        android:textColor="@color/yellow_text"
        android:visibility="invisible"/>

    <view.clip.child.ClipBtnProgress
        android:id="@+id/btn_setup"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
