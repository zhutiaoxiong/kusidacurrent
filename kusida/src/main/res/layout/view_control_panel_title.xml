<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription,HardcodedText" >
    <RelativeLayout
        android:id="@+id/tiplayout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#2C2C2C"
        android:visibility="gone"
        >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_centerInParent="true">
           <ImageView
               android:layout_width="21dp"
               android:layout_height="17dp"
               android:scaleType="centerCrop"
               android:src="@drawable/img_tips_trumpets"/>
           <TextView
               android:id="@+id/txt_tip"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12dp"
               android:textColor="@color/white"
               android:layout_marginStart="5dp"
               android:text="网络连接不可用，请打开蓝牙并靠近车辆"
               />
           <TextView
               android:id="@+id/txt_noconnect"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12dp"
               android:textColor="@color/blue_text"
               android:layout_marginStart="5dp"
               android:text="无法连接蓝牙？"
               />
       </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/center_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/tiplayout"
        >
        <View
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:background="@drawable/img_ova_bgl"
            android:layout_marginTop="6dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            />
        <ImageView
            android:id="@+id/img_add"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="11dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_add_top"/>
        <ImageView
            android:id="@+id/img_line"
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_toStartOf="@+id/img_add"
            android:layout_marginEnd="11.5dp"
            android:layout_marginTop="15.5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_gps_off_top"/>
        <ImageView
            android:id="@+id/img_temporary_borrow_car"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_toStartOf="@+id/img_line"
            android:layout_marginEnd="11.5dp"
            android:layout_marginTop="11dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_tempor_borrow_car_no"/>

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/img_loginreg_logo"/>
        <ImageView
            android:id="@+id/img_bluetooth"
            android:layout_width="21.5dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@+id/img_icon"
            android:layout_marginStart="14dp"
            android:layout_marginTop="13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_bluetooth_no_top"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/img_gps"
            android:layout_width="21.5dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@+id/img_bluetooth"
            android:layout_marginStart="8dp"
            android:layout_marginTop="13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_gps_off_top"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tem_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#48ff00"
            android:text="28℃"
            android:layout_toEndOf="@+id/img_icon"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tem_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#48ff00"
            android:text="车内温度"
            android:layout_alignStart="@+id/tem_one"
            android:layout_below="@+id/tem_one"
            android:visibility="invisible"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/end_time_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#48ff00"
        android:text="借用结束时间："
        android:layout_marginStart="15dp"
        android:layout_below="@+id/center_layout"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/end_time_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:text="time"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/end_time_one"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tiplayout"
        android:id="@+id/tip_call_layout"
        android:visibility="gone"
        >
        <View
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_transparent"
            android:visibility="visible"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            >
            <ImageView
                android:id="@+id/iv"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginEnd="86dp"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                android:src="@drawable/drop_down_carset" />
            <RelativeLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/car_set_round_bg"
                android:layout_below="@+id/iv"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >
                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1检查手机是否已经打开蓝牙"
                    android:layout_marginStart="30dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_below="@+id/v1"/>
                <TextView
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t1"
                    android:layout_marginStart="30dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="2检查手机是否打开GPS定位（位置信息）"/>
                <TextView
                    android:id="@+id/t3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t2"
                    android:layout_marginStart="30dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="3将手机蓝牙关闭再打开后再重新尝试连接"/>
                <TextView
                    android:id="@+id/t4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t3"
                    android:layout_marginStart="30dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="4将APP飞掉再重新打开APP后尝试连接"/>
                <TextView
                    android:id="@+id/t5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t4"
                    android:layout_marginStart="30dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="5将手机关机重启后再重新尝试连接。"/>
                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/t5"/>
            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>