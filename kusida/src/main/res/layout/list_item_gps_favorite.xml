<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Single_line_text_trans"
    android:background="@color/white"
    android:layout_height="66dp"
    tools:ignore="HardcodedText,ContentDescription" >
    <ImageView
        android:id="@+id/img_loc"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:paddingTop="14dp"
        android:paddingLeft="18dp"
        android:paddingBottom="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_gps_location" />
    <ImageView
        android:id="@+id/img_intro"
        android:layout_width="44dp"
        android:layout_height="22dp"
        android:layout_below="@+id/img_loc"
        android:paddingLeft="24dp"
        android:paddingTop="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_intro" />

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/select_true" />

    <TextView
        android:id="@+id/txt_time_start"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:layout_toRightOf="@+id/img_loc"
        android:layout_toLeftOf="@+id/img_select"
        android:layout_alignParentTop="true"
        android:gravity="left|bottom"
        android:text="@string/the_time"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_place_start"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/img_loc"
        android:layout_toLeftOf="@+id/img_select"
        android:layout_below="@+id/txt_time_start"
        android:gravity="left|bottom"
        android:singleLine="true"
        android:text="@string/address"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/txt_intro"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:layout_toRightOf="@+id/img_loc"
        android:layout_toLeftOf="@+id/img_select"
        android:layout_alignParentBottom="true"
        android:gravity="left|bottom"
        android:singleLine="true"
        android:text="@string/note"
        android:textColor="@color/black" />

</RelativeLayout>