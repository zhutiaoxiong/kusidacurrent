<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <View
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:background="#616984"/>
    <RelativeLayout
        android:id="@+id/cardtype_layout"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        >

        <TextView
            android:id="@+id/cardtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8.25dp"
            android:text="@string/primary_card"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/guide"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/wenhao_click" />
    </RelativeLayout>
    <Button
        android:id="@+id/button_layout"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/synthetic_button"
        />
    <Button
        android:id="@+id/touch_exit_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.01"
        android:background="@color/black"
        android:visibility="invisible" />
    <LinearLayout
        android:id="@+id/cardlost_layout_2"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginTop="165.5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
       android:layout_below="@+id/cardtype_layout"
        >
        <view.view4info.card.Cardslot
            android:id="@+id/cardlost_4"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <view.view4info.card.Cardslot
            android:id="@+id/cardlost_5"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <view.view4info.card.Cardslot
            android:id="@+id/cardlost_6"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cardlost_layout_1"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/cardtype_layout">
      <view.view4info.card.Cardslot
          android:id="@+id/cardlost_1"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1"
          />
        <view.view4info.card.Cardslot
            android:id="@+id/cardlost_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
           />
        <view.view4info.card.Cardslot
            android:id="@+id/cardlost_3"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
          />
    </LinearLayout>

</RelativeLayout>
