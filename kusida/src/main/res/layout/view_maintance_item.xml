<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="@drawable/view_maintain_item_background"/>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/maintain_status"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="jsjfjsaf"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/license_plate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="jsjfjsaf"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/maintain_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/black"
            android:text="hahah hadahdha"
            android:layout_weight="1"
            android:textSize="16dp"/>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout"
        android:background="#484848"/>
    <TextView
        android:id="@+id/car_percent"
        android:layout_width="38dp"
        android:layout_height="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="39dp"
        android:textSize="12dp"
        android:text="0%"
        android:textColor="@color/car_percent"
        android:gravity="center_horizontal"
        android:layout_below="@+id/line"/>
    <ImageView
        android:id="@+id/car"
        android:layout_width="38dp"
        android:layout_height="20dp"
        android:layout_below="@+id/car_percent"
        android:layout_alignLeft="@+id/car_percent"
        android:scaleType="fitXY"
        android:src="@drawable/car_maintain"/>
    <ImageView
        android:id="@+id/colour_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:scaleType="fitXY"
        android:layout_marginTop="77dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/line"
        android:src="@drawable/colour_line"
        />
    <TextView
        android:id="@+id/maintain_time_specific"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_below="@+id/colour_line"
        android:textSize="12dp"
        android:textColor="@color/smart_gray"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="kldkgkdkgkdkg"
       />
    <TextView
        android:id="@+id/maintain_mileage_specific"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_below="@+id/colour_line"
        android:layout_alignParentRight="true"
        android:textSize="12dp"
        android:textColor="@color/smart_gray"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical|right"
        android:text="kfdkgkdkg"
       />
</RelativeLayout>