    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btn_recharge_vouchers"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/all_background_color"
            android:text="@string/scavenger_recharge_voucher" />
        <View
            android:id="@+id/cross_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            />
        <Button
            android:id="@+id/btn_give_firend"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/background_top"
            android:textColor="@color/black"
            android:text="@string/to_top_up_your_friends"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/blue_light"
            android:textColor="@color/black"
            android:text="立即充值" />

    </LinearLayout>

