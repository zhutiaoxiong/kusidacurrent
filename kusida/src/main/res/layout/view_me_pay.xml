<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/findbg"
    android:layout_marginTop="9dp"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
   >
    <common.pinyinzhuanhuan.CircleImg
        android:id="@+id/img_left"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@drawable/applist_carpos_center" />
    <TextView
        android:id="@+id/txt_carname"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/img_left"
        android:layout_marginStart="18dp"
        android:text="@string/license_plate_number_not_choose_vehicles"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txt_date"
        android:layout_below="@+id/txt_carname"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/img_left"
        android:layout_marginStart="18dp"
        android:text="@string/as_of_the_date_of_service"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:textColor="@color/black"/>
</RelativeLayout>
