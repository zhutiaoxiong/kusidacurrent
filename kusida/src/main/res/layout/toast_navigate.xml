<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText,ContentDescription">

    <View
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bgst_white_round15"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:minWidth="300dp"
            android:text="@string/open_navigation"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/txt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:text="@string/navigation_now"
            android:singleLine="false"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@color/gray_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginRight="1dp"
                android:layout_weight="50"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/back"
                android:textSize="16dp"/>
            <ImageView
                android:id="@+id/img_splitline"
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:src="@color/gray_light"/>

            <TextView
                android:id="@+id/btn_center"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_weight="50"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/baidu_navigation"
                android:textSize="16dp"/>
            <ImageView
                android:id="@+id/img_splitline1"
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:src="@color/gray_light"/>

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_weight="50"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/gaode_navigation"
                android:textSize="16dp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>