<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_all"
                android:orientation="vertical"
                tools:ignore="HardcodedText,ContentDescription">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/titlehead_gradient"/>
    <ImageView
        android:id="@+id/img_left"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="13dp"
        android:scaleType="fitXY"
        android:src="@drawable/titlehead_back"/>
    <TextView
        android:id="@+id/txt_leftn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_toRightOf="@+id/img_left"
        android:gravity="center"
        android:text="返回"
        android:textColor="@color/title_txt_color"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/txt_title_show"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="副车主管理"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/title_txt_color"
        android:textSize="18dp"/>
    <ImageView
        android:id="@+id/img_right"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:padding="13dp"
        android:scaleType="fitXY"
        android:src="@android:color/transparent"/>
    <TextView
        android:id="@+id/txt_rightn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="16dp"/>
</RelativeLayout>