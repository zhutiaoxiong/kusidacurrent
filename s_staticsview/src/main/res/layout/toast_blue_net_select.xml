<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:ignore="HardcodedText,ContentDescription">
    <View
        android:id="@+id/touch_exit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#e6e6e6">        <TextView
            android:id="@+id/txt_head"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/choose_title"
            android:textColor="#a3a6aa"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/txt_wifi"
            android:layout_below="@+id/txt_head"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="left|center_vertical"
            android:text="@string/choose_wifi"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <ImageView
            android:id="@+id/img_wifi"
            android:layout_below="@+id/txt_head"
            android:layout_alignParentRight="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/toast_check_ok"/>
        <TextView
            android:id="@+id/txt_bluetooth"
            android:layout_below="@+id/txt_wifi"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="10dp"
            android:gravity="left|center_vertical"
            android:text="@string/choose_bluetooth"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <ImageView
            android:id="@+id/img_bluetooth"
            android:layout_below="@+id/txt_wifi"
            android:layout_alignParentRight="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/toast_check_ok"/>
        <TextView
            android:id="@+id/txt_cancel"
            android:layout_below="@+id/txt_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="@color/blue_text"
            android:textSize="16dp"/>
    </RelativeLayout>
</RelativeLayout>