<resources>
    <style name="Line_text_trans">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>
    <style name="Style_txt_line_trans">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/confirm_txt_color</item>
        <item name="android:textColorHint">@color/confirm_hint_color</item>
    </style>
    <style name="Style_txt_line">
        <item name="android:background">@color/normal_bg_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/normal_txt_color</item>
        <item name="android:textColorHint">@color/normal_hint_color</item>
    </style>
    <style name="Style_button_line">
        <item name="android:background">@drawable/bgst_button_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/button_txt_color</item>
        <item name="android:textColorHint">@color/normal_hint_color</item>
    </style>
    <style name="Single_line_with_background">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>
    <style name="Single_line_text_trans">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>
    <style name="MyDialogActivityStyle">
        <item name="android:windowBackground">@android:color/transparent</item><!--设置背景色-->
        <item name="android:windowFrame">@null</item><!--设置windowFrame框 这里不显示-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上(底部的activity)-->
        <item name="android:windowIsTranslucent">true</item><!--窗口是否半透明 配合背景色使用-->
        <item name="android:windowContentOverlay">@null</item><!--弹窗是否有遮盖 不设置的话有可能会出现边界黑线-->
        <item name="android:windowAnimationStyle">@style/AnimDialogEnterExit</item>
        <item name="android:backgroundDimEnabled">false</item><!--是否设置背景模糊-->
    </style>
    <style name="AnimDialogEnterExit">
        <item name="android:windowEnterAnimation">@anim/fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/fade_out_from_bottom</item>
    </style>
</resources>
